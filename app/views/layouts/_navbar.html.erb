        <%= link_to "Student", student_index_path %>
        <%= link_to "Teacher", teacher_index_path %>
    </div>
    <div class="auth">
        <% if user_signed_in? %>
        <p>
            <%= current_user.email %> 
        </p>
        <span > | </span> 
        <p>
            <%= link_to "Sign-Out", destroy_user_session_path, data: { turbo_method: :delete }%>
        </p>
        <% else %>
        <p>
            <%= link_to "Sign-In", new_user_session_path %>
        </p>
        <span> | </span>
        <p>
            <%= link_to "Sign-Up", new_user_registration_path %>
        </p>
        <% end %>
    </div>
</div>